<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
        	<gradient android:startColor="#1ABC90" android:endColor="#1ABC90" android:angle="90"/>
	  		<corners android:radius="3dp"/>
			<stroke android:width="1dp"  android:color="#ded"/>
			<padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
	
    
    
	<item android:state_pressed="true">
	    <shape android:shape="rectangle">
        	<gradient android:startColor="#1AAF7A" android:endColor="#1AAF7A" android:angle="90"/>
        	<corners android:radius="3dp"/>
			<stroke android:width="1dp"  android:color="#ded"/>
			<padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
	</item>
</selector>
